{{#reveal-slide class="lsgdd-FreestyleFeaturesSlide"}}
  {{presentations/slide-header
    super=""
    main="Ember Freestyle Features"
    sub="Inspired yet Emberized"
  }}
  {{#presentations/slide-body columns=1}}
    {{#presentations/slide-column}}
      {{#presentations/slide-list type="small"}}

        {{#presentations/slide-list-item class="lsgdd-FreestyleFeaturesSlide-listItem"}}
          Code Snippets &amp; Markdown Notes
        {{/presentations/slide-list-item}}
        {{#presentations/slide-list-item type="small"}}
          <ul>
            <li>Automatic for <span class="lsgdd-InlineCode lsgdd-InlineCode--subtle">\{{freestyle-usage}}</span> components in style guide</li>
            <li>Discovered delimited throughout codebase via <span class="lsgdd-InlineCode lsgdd-InlineCode--subtle">FREESTYLE-USAGE</span> delimiters</li>
          </ul>
        {{/presentations/slide-list-item}}

        {{#presentations/slide-list-item class="lsgdd-FreestyleFeaturesSlide-listItem"}}
          Toggle code, notes, labels, menus, etc.
        {{/presentations/slide-list-item}}
        {{#presentations/slide-list-item type="small"}}
          <ul>
            <li>Useful as design showcase for various audiences</li>
          </ul>
        {{/presentations/slide-list-item}}

        {{#presentations/slide-list-item class="lsgdd-FreestyleFeaturesSlide-listItem"}}
          Focus on individual components or sections
        {{/presentations/slide-list-item}}
        {{#presentations/slide-list-item type="small"}}
          <ul>
            <li>Useful for development and design review</li>
          </ul>
        {{/presentations/slide-list-item}}

        {{#presentations/slide-list-item class="lsgdd-FreestyleFeaturesSlide-listItem"}}
          Polite, lightweight Ember citizen
        {{/presentations/slide-list-item}}
        {{#presentations/slide-list-item type="small"}}
          <ul>
            <li>No additional dependencies*</li>
            <li>Fully encapsulated CSS using SUIT CSS naming conventions</li>
          </ul>
        {{/presentations/slide-list-item}}

      {{/presentations/slide-list}}
    {{/presentations/slide-column}}

  {{/presentations/slide-body}}
  {{#presentations/slide-footer}}
    <div class="lsgdd-TightContainer">
      <img class="lsgdd-Image lsgdd-ObjectivesEmberSlide-image--tomsterBuiltWith" src="assets/images/presentations/tomster-built-with.png" alt="Built With Ember">
    </div>
  {{/presentations/slide-footer}}
  {{#reveal-slide-notes}}
  {{/reveal-slide-notes}}
{{/reveal-slide}}
